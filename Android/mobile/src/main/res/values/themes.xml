<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

<style name="Theme.LameIrssiTheme" parent="Theme.AppCompat">
    <item name="vpiTitlePageIndicatorStyle">@style/Widget.LameIrssiTheme.ViewPagerIndicator</item>
</style>

<style name="Widget.LameIrssiTheme.ViewPagerIndicator" parent="Widget.TabPageIndicator">
    <item name="android:typeface">monospace</item>
    <item name="android:background">@color/black</item>
    
    <item name="footerColor">@color/lameFooterColor</item>
    <item name="footerIndicatorHeight">4dp</item>
    <item name="footerIndicatorStyle">underline</item>
</style>
    
<style name="Theme.IrssiTheme" parent="Theme.AppCompat">
    <item name="actionBarStyle">@style/Widget.IrssiTheme.ActionBar</item>
    <item name="android:actionBarStyle">@style/Widget.IrssiTheme.ActionBar</item>
    <item name="android:scrollViewStyle">@style/Widget.IrssiTheme.ScrollView</item>
    <item name="vpiTitlePageIndicatorStyle">@style/Widget.IrssiTheme.ViewPagerIndicator</item>
    <item name="android:windowBackground">@color/backgroundColor</item>
</style>

<style name="Widget.IrssiTheme.ActionBar" parent="Base.ThemeOverlay.AppCompat.Dark">
    <item name="background">@drawable/actionbar</item>
    <item name="android:background">@drawable/actionbar</item>
</style>

<style name="Widget.IrssiTheme.ScrollView" parent="@android:style/Widget.ScrollView">
    <item name="android:background">@drawable/rounded_box</item>
</style>

<style name="Widget.IrssiTheme.ViewPagerIndicator" parent="Widget.TabPageIndicator">
    <item name="android:typeface">monospace</item>
    <item name="android:background">@color/backgroundColor</item>
    
    <item name="footerColor">@color/footerColor</item>
    <item name="footerIndicatorHeight">6dp</item>
    <item name="footerIndicatorStyle">triangle</item>
</style>

</resources>